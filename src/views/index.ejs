<!DOCTYPE html>
<html lang="es">
<head>
   <%- include('partials/header')%>
   <title>books</title>
</head>
<body>
    <%- include('partials/navigator')%>
   <div class="container">
       <div class="row">
           <% books.forEach(function (book){ %>
               <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                            <p><%= book.title  %> / <%= book.author  %> </p>
                    </div>
                    <img src= <%= book.image  %>  alt="">
                    <div class="card-body">
                        <p><%= book.description  %></p>
                    </div>
                    <div class="card-footer">
                        <a href="/delete/<%= book.id %> " class="btn btn-danger">borrar</a>
                    </div>
                </div>
               </div>
            <% }); %> 
           
       </div>
   </div>

</body>
</html>